{{#if addNewPost}}
  <div class="post">
    <h4>New Post</h4>
    <hr>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="partners">Partners</label>
        {{input value=partners id="partners"}}
      </div>
      <div class="form-group">
        <label for="song">Earworm</label>
        {{input value=song id="song"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>
      <button {{action 'savePost'}}>Save Post</button>
      <button {{action 'cancel'}}>Cancel</button>
    </form>
  </div>
  {{else}}
    <button {{action 'postFormShow'}}>Add Post</button>
{{/if}}
