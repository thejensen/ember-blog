{{#if updatePostForm}}
  <div class="post">
    <h4>Update Post</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=post.title id="title"}}
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          {{input value=post.content id="content"}}
        </div>
        <div class="form-group">
          <label for="partners">Partners</label>
          {{input value=post.partners id="partners"}}
        </div>
        <div class="form-group">
          <label for="song">Song</label>
          {{input value=post.song id="song"}}
        </div>
        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=post.image id="image"}}
        </div>
        <button {{action 'update' post}}>Save</button>
        <button {{action 'cancel'}}>Cancel</button>
      </form>
    </div>
  </div>
{{else}}
  <div class="post update">
    <button {{action 'updatePostForm'}}>Update Blog Post</button>
  </div>
{{/if}}
